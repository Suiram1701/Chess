<Window x:Class="Chess.App.MainMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Chess.App"
        mc:Ignorable="d"
        DataContext="{Binding RelativeSource={RelativeSource Self}}"
        Height="320" Width="320" Background="White"
        Title="{Binding L_Title, Mode=OneTime}" ResizeMode="NoResize">
    <Canvas>
        <Label Content="{Binding L_Label, Mode=OneTime}" Canvas.Left="90" Canvas.Top="20" FontSize="40" HorizontalAlignment="Center" VerticalAlignment="Center" Height="55" Width="140"/>

        <Button Click="Local_Click" Content="{Binding L_STBtn, Mode=OneTime}" Canvas.Left="60" Canvas.Top="130" Height="41" Width="200" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="15"/>
        <Button Click="Load_Click" Content="{Binding L_Load}" FontSize="15" Canvas.Left="60" Canvas.Top="196" HorizontalAlignment="Center" VerticalAlignment="Top" Width="200" Height="41"/>
    </Canvas>
</Window>